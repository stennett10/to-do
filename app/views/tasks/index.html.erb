<div class="page-header">
  <%= link_to new_task_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Task
  <% end %>
  <h1>Listing tasks</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Desc</th>
            <th>Complete</th>
            <th>Cat</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tasks) do |task| %>
            <td><%= task.name %></td>
            <td><%= task.desc %></td>
            <td>

              <% if task.complete == false%>
                  <% link_to complete_task_path(task), :class => 'btn btn-default', remote: true %>
                      <span class="btn-default btn glyphicon glyphicon-ok"></span>
                   
              <% else%>
                <span class="btn-default btn disabled glyphicon glyphicon-ok"></span>
              <%end%>
              
           </td>
            <td><%= task.cat.name %></td>
            <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
